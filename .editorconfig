# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default setting
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off

[*.{sh,html,css,js,ts,json,yml,toml,md}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
